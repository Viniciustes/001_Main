<div class="row">
    <div class="col-lg-12">
        <section class="box-typical">
            <header class="box-typical-header">
                <div class="tbl-row">
                    <div class="tbl-cell tbl-cell-title">
                        <h6 style="font-weight:normal; padding-right:8px;">Contributions to CTJNET / School Website / Student Blog & Teacher Blog / iPad Activities</h6>
                    </div>
                    <div class="tbl-cell tbl-cell-action-bordered">
                        @*<button type="button" class="action-btn action-add" id="btnAddRowTableDigitalLiteracy">
                            <i class="fa fa-plus-circle"></i>&nbsp;&nbsp;Add
                        </button>*@
                    </div>
                </div>

                <div class="modal fade crud6-modal"
                     tabindex="-1"
                     role="dialog"
                     aria-labelledby="crud6-modal"
                     aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <button type="button" class="modal-close" data-dismiss="modal" aria-label="Close">
                                    <i class="font-icon-close-2"></i>
                                </button>
                                <h4 class="modal-title" id="myModalLabel">New</h4>
                            </div>
                            <div class="modal-body">
                                <form id="formCrud6">
                                    <div class="row">
                                        <div class="col-md-12">
                                            <fieldset class="form-group">
                                                <label class="form-label semibold" for="exampleInput">Date</label>
                                                <input type="text" class="form-control date-mask-input" id="inputCrud6Date" name="inputCrud6Date" placeholder="__/__/____" required date="true">
                                                <span>MM/DD/YYYY</span>
                                            </fieldset>
                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="col-md-12">
                                            <fieldset class="form-group">
                                                <label class="form-label semibold">Evidence</label>
                                                <textarea rows="4" class="form-control" placeholder="" id="inputCrud6Evidence" name="inputCrud6Evidence" required></textarea>
                                            </fieldset>
                                        </div>
                                    </div>
                                </form>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-rounded btn-default" data-dismiss="modal" data-toggle="tooltip" data-title="Cancel" data-placement="top" disabled="disabled">
                                    <span class="glyphicon glyphicon-remove"></span>
                                </button>
                                <button type="button" id="btnCrud6Save" class="btn btn-rounded btn-primary ladda-button" data-toggle="tooltip" data-title="Save" data-placement="top" data-style="zoom-in" disabled="disabled">
                                    <span class="ladda-label"><span class="glyphicon glyphicon-ok"></span></span>

                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </header>
            <div class="">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Date</th>
                                <th>Evidence</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody class="tbody-digital-literacy">
                            @if (Model.DigitalLiteracies.Count == 0)
                            {
                                <tr>
                                    <td colspan="3">
                                        <div class="alert alert-warning">
                                            There are no records.
                                        </div>
                                    </td>
                                </tr>
                            }
                            else
                            {
                                foreach (var item in Model.DigitalLiteracies)
                                {
                                    <tr class="row-table-digital-literacy" data-selfeval-ano="@item.Ano" data-selfeval-nseq="@item.Nseq">
                                        <td class="table-date content-date">@item.Data.Date.ToString("dd/MM/yyyy")</td>
                                        <td class="color-blue-grey-lighter content-description">@item.Description</td>
                                        <td class="table-icon-cell text-right">
                                            <button class="label-remove btn btn-sm btn-danger btn-rounded" disabled="disabled">
                                                <i class="fa fa-times"></i>
                                            </button>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div><!--.box-typical-body-->
        </section><!--.box-typical-->
    </div>
</div><!--.row-->
