<div class="row">
    <div class="col-lg-12">
        <fieldset class="form-group">
            <!-- <div class="col-xs-12 col-textarea-auto-avaliacao"> -->

            <div class="radio radio-item  @if (Model.DegreeComplete == 1) { <text> radio-gray </text> }">
                <input type="radio" name="degree" id="inputDegree01" value="1" @if (Model.Degree == 1) { <text> checked="checked" </text> } @if (Model.DegreeComplete == 1) { <text> disabled="disabled" </text> } />
                <label for="inputDegree01">Completed</label>
            </div>
            <div class="radio radio-item">
                <input type="radio" name="degree" id="inputDegree02" value="2" @if (Model.Degree == 2) { <text> checked="checked" </text> } @if (Model.DegreeComplete == 1) { <text> disabled="disabled" </text> } />
                <label for="inputDegree02">
                    Under way.
                    <p class="text-info" style="margin-bottom: 0px;">
                        <small>
                            <span class="glyphicon glyphicon-info-sign"></span> Need to upload university
                            transcript.
                        </small>
                    </p>    
                </label>
            </div>

            <div class="row">
                <!-- <h5 class="with-border"> </h5> -->
                <div class="col-md-12 collapse" id="collapseQ6Upload">
                    <p>
                        @if (Model.DegreeImage != null)
                        {
                            <span class="label label-pill label-info label-show-image" data-toggle="modal" data-target=".modalShowImagem" data-appbasepath="@Model.DegreeImage.AppBasepath" data-basepath="@Model.DegreeImage.Basepath" data-filename="@Model.DegreeImage.Filename">
                                <i class="glyphicon glyphicon-picture"></i>
                            </span>
                        }
                    </p>
                    <p class="text-center" style="margin-bottom: 0px;">
                        <small>
                            <span class="glyphicon glyphicon-arrow-up"></span> Please upload
                            university transcript
                        </small>
                    </p>
                    <div class="fileinput fileinput-new" data-provides="fileinput">
                        <span class="btn btn-primary btn-file btn-block">
                            <span>Click here to select the file(s)</span>
                            <input type="file" id="inputDegreeUnderWayFile" name="inputDegreeUnderWayFile" />
                        </span>
                        <span class="fileinput-filename"></span>
                        <span class="fileinput-new">No file chosen</span>
                    </div>
                </div>
            </div>

            <div class="radio radio-item">
                <input type="radio" name="degree" id="inputDegree03" value="3" @if (Model.Degree == 3) { <text> checked="checked" </text> } @if (Model.DegreeComplete == 1) { <text> disabled="disabled" </text> } />
                <label for="inputDegree03">No degree, but I have TDC/CTJ TEFL certificate.</label>
            </div>
            <br class="hidden-lg-up">
            <div class="radio radio-item">
                <input type="radio" name="degree" id="inputDegree04" value="4" @if (Model.Degree == 4) { <text> checked="checked" </text> } @if (Model.DegreeComplete == 1) { <text> disabled="disabled" </text> } />
                <label for="inputDegree04">No degree.</label>
            </div>
            <!-- </div> -->
        </fieldset>
    </div>
</div><!--.row-->